<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-block btn-info" %>
  <% else %>
    <%= link_to "フォーローする", user_relationships_path(user.id), method: :post, class: "btn btn-block btn-success" %>
  <% end %>
<% end %>