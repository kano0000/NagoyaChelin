<div class = "container">
  <div class = "row">
    <div class = "col-8 mx-auto">
      <h1>編集</h1>
        <%= render "layouts/errors", obj: @store %>
        <%= form_with model: @store do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :food_image %>
          <%= f.file_field :food_image, class: "form-control-file",accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update Store", class: "btn btn-secondary" %>
        </div>
        <% end %>
    </div>
  </div>
</div>