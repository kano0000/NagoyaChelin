<div class = "container mt-5">
  <div class = "row">
    <div class = "col-8 mx-auto">
      <h1>お店を投稿する</h1>
      <%= form_with model: @store, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        
        <!--<div class="form-group">-->
        <!--  <%#= text_field_tag :zipcode, nil, class: "form-control", placeholder: "郵便番号" %>-->
        <!--</div>-->
      
        <!--<div class="form-group">-->
        <!--  <%#= f.label :address %>-->
        <!--  <%#= f.text_area :address, class: "form-control", placeholder: "住所" %>-->
        <!--</div>-->
        
        <div class="form-group">
          <%= label_tag :zipcode, "郵便番号" %>
          <%= text_field_tag :zipcode, nil, id: "zipcode", class: "form-control", placeholder: "郵便番号" %>
        </div>

        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, id: "store_address", class: "form-control", placeholder: "住所" %>
        </div>

        <div class="form-group">
          <%= f.label :store_image,  "写真を登録"%>
          <%= f.file_field :store_image, class: "form-control-file",accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <%= f.submit class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 

<%= javascript_pack_tag "jpostal",  'data-turbolinks-track': 'reload' %>
