<div class="container">
  <div class="row mb-5">
    <div class="col-lg-12 mt-4">
      <h2 class="text-center mb-3" style="font-weight:bold; color:#A07B35;">管理者ログイン</h2>
    </div>
  </div>
  <div style="padding: 20px; margin-bottom: 10px; border: 5px double #A07B35; background-color: #fffaf0;">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal mt-3" }) do |f| %>
    <div class="form-group row mb-5">
      <%= f.label :メールアドレス, class: "col-lg-3 col-form-label text-lg-right" %>
      <div class="col-lg-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mb-3">
      <%= f.label :パスワード, class: "col-lg-3 col-form-label text-lg-right" %>
      <div class="col-lg-7">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "margin-bottom: 30px; margin-top: -10px;" %>
      </div>
    </div>
    <div class="form-group row mb-2">
      <div class="col-lg-7 offset-lg-3">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary", style: "width: 170px; height: 40px; border-radius: 12px;" %>
      </div>
    </div>
    </div>

    <% if false %>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <%= render "admin/shared/links" %>
</div>